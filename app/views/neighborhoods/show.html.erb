<div class="page-header">
  <h1>Neighborhood #<%= @neighborhood.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @neighborhood.name %></dd>

  <dt>City</dt>
  <dd><%= @neighborhood.city %></dd>



<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
    </tr>
  </thead>

<h2>Venues</h2>

<% Venue.where({ :neighborhood_id => @neighborhood.id}).each do |venue| %>
<!-- Need to think about this a bit more. -->
<tr>
<th>
<%= venue.name %>
</th>
<th>
<%= venue.address %>
</th>
</tr>
<% end %>
</table>


</dl>
